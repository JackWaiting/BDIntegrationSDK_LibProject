<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radiogroup_rhythm_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55000000"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/readioButton_button_light_normal"
                style="@style/radiobutton_light_effect"
                android:checked="true"
                android:drawableTop="@drawable/select_button_lignt_normal"
                android:textSize="@dimen/font_size"
                android:text="@string/light_normal" />

            <RadioButton
                android:id="@+id/readioButton_button_light_rainbow"
                style="@style/radiobutton_light_effect"
                android:drawableTop="@drawable/select_button_lignt_rainbow"
                android:textSize="@dimen/font_size"
                android:text="@string/light_rainbow" />

            <RadioButton
                android:id="@+id/readioButton_button_light_pulse"
                style="@style/radiobutton_light_effect"
                android:drawableTop="@drawable/select_button_lignt_pulse"
                android:textSize="@dimen/font_size"
                android:text="@string/light_pulse" />

            <RadioButton
                android:id="@+id/readioButton_button_light_flashing"
                style="@style/radiobutton_light_effect"
                android:drawableTop="@drawable/select_button_lignt_flashing" 
                android:textSize="@dimen/font_size"
                android:text="@string/light_flashing"/>

            <RadioButton
                android:id="@+id/readioButton_button_light_candle"
                style="@style/radiobutton_light_effect"
                android:drawableTop="@drawable/select_button_lignt_candle"
                android:textSize="@dimen/font_size"
                android:text="@string/light_candle" />
        </RadioGroup>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        layout="@layout/layout_colorpicker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/cb_lamp_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_lamp_on_btn" />
		<include 
		    layout="@layout/layout_select_color"/>
    </LinearLayout>

</LinearLayout>