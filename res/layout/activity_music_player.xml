<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_gray"
    android:clipChildren="false"
    >
    
    <RelativeLayout 
        android:layout_below="@+id/titleView"
        android:id="@+id/volume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="invisible"
        >
        <ImageView 
            android:id="@+id/vol_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vol_decrease"
            android:layout_centerVertical="true"
            />
        
        <SeekBar 
            android:id="@+id/seekbar_vol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb"
            android:layout_toRightOf="@+id/vol_decrease"
            android:layout_toLeftOf="@+id/vol_increase"
            android:progressDrawable="@drawable/seek_img"
            />
        
        <ImageView 
            android:id="@+id/vol_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vol_increase"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    
    <include 
        android:layout_below="@+id/volume_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/frag_music_player"
        android:layout_above="@+id/control_layout"
        />
    
    <include 
	    android:id="@+id/control_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    layout="@layout/layout_player_control"
	    android:layout_alignParentBottom="true"
	    />
    
    <com.chipsguide.app.colorbluetoothlamp.v2.brunton.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImg="@drawable/selector_btn_back"
        app:rightImg="@drawable/selector_btn_player"
        app:text="@string/music_play"
        app:marque="true"
        app:showToastTv="true"
        >
    </com.chipsguide.app.colorbluetoothlamp.v2.brunton.view.TitleView>

    <com.chipsguide.app.colorbluetoothlamp.v2.brunton.widget.SlidingLayer
        android:id="@+id/playlist_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:stickTo="right"
        >

        <include 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_playlist"
            />
    </com.chipsguide.app.colorbluetoothlamp.v2.brunton.widget.SlidingLayer>

</RelativeLayout>