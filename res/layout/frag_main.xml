<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.chipsguide.app.colorbluetoothlamp.v2.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_nav_bottom" >
    </com.chipsguide.app.colorbluetoothlamp.v2.widget.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        android:background="@color/color_title_bg"
        android:paddingTop="5dp"
        android:paddingBottom="3dp"
        >

        <RadioButton
            android:id="@+id/rb_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/selector_rb_lamp"
            android:checked="true"
            android:text="@string/color_lamp"
            android:textSize="12sp"
            android:textColor="@color/selector_bottom_rb_text"
             />

        <RadioButton
            android:id="@+id/rb_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/selector_rb_music"
            android:text="@string/music"
            android:textSize="12sp"
            android:textColor="@color/selector_bottom_rb_text"
             />
        

        <RadioButton
            android:id="@+id/rb_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/selector_rb_shake" 
            android:text="@string/shake"
            android:textSize="12sp"
            android:textColor="@color/selector_bottom_rb_text"
            />
    </RadioGroup>

</RelativeLayout>