<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_item"
    android:paddingRight="10dp" >

    <com.chipsguide.app.colorbluetoothlamp.v2.brunton.widget.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:border_width="1dp"
        app:border_color="@color/color_dark_gray" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_image"
        android:src="@drawable/ic_album"
         />

    <com.chipsguide.app.colorbluetoothlamp.v2.brunton.view.MyTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="专辑"
        android:textSize="@dimen/text_size_first" />

    <com.chipsguide.app.colorbluetoothlamp.v2.brunton.view.MyTextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_plays"
        android:layout_toRightOf="@id/iv_image"
        android:text="节目数"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/text_size_secondary" />

    <com.chipsguide.app.colorbluetoothlamp.v2.brunton.view.MyTextView
        android:id="@+id/tv_plays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_image"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_image"
        android:text="更新日期"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/text_size_secondary" />

    <ImageView
        android:id="@+id/action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_image"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:scaleType="fitXY" />

</RelativeLayout>