<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/color_title_bg"
    >
    
    <TextSwitcher
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
    </TextSwitcher>

    <ImageView
        android:id="@+id/left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/right_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/right_btn"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:src="@drawable/selector_btn_nav"
         />

    <ImageView
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:src="@drawable/selector_btn_player"
        />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/right_btn"
        android:background="@drawable/line_title"
        android:scaleType="fitXY"
        />
    

</RelativeLayout>
