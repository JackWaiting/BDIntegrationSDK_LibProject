<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:id="@+id/parent"
    android:clipChildren="false"
     >
    
    <ListView 
        android:paddingTop="10dp"
        android:clipToPadding="false"
        android:id="@+id/lv_alarm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/black"
        android:dividerHeight="10dp"
        android:background="@drawable/bg_main"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
        android:layout_below="@+id/titleView"
        >
    </ListView>
    
    <TextView 
        android:paddingTop="10dp"
        android:id="@+id/textview_toast_notlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleView"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/timing_lights_toast"
        />
    
    <com.chipsguide.app.colorbluetoothlamp.v2.brunton.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightImg="@drawable/selector_btn_player"
        app:leftImg="@drawable/selector_btn_back"
        app:text="@string/time_light">
    </com.chipsguide.app.colorbluetoothlamp.v2.brunton.view.TitleView>

</RelativeLayout>
