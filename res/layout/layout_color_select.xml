<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:id="@+id/rg_color"
    android:gravity="center_horizontal"
    >
    <RadioButton 
        android:id="@+id/rb_color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_white"
        android:tag="@android:color/white"
        android:layout_marginRight="5dp"
        android:button="@null"
        />
    
    <RadioButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_orange"
        android:tag="@color/color_orange"
        android:layout_marginRight="5dp"
        android:button="@null"
        />
    
    <RadioButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_pink"
        android:layout_marginRight="5dp"
        android:tag="@color/color_pink"
        android:button="@null"
        />
    
    <RadioButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_purpel"
        android:tag="@color/color_purple"
        android:layout_marginRight="5dp"
        android:button="@null"
        />
    
    <RadioButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_green"
        android:layout_marginRight="5dp"
        android:tag="@color/color_green"
        android:button="@null"
        />
    
    <RadioButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_ching"
        android:layout_marginRight="5dp"
        android:tag="@color/color_ching"
        android:button="@null"
        />
    
    <RadioButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_blue"
        android:layout_marginRight="5dp"
        android:tag="@color/color_blue"
        android:button="@null"
        />

</RadioGroup>
