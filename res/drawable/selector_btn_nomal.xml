<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item 
        android:state_pressed="true"
        >
        <color android:color="#70000000"/>
    </item>
     <item 
        android:state_checked="true"
        >
        <shape >
            <corners android:topLeftRadius="@dimen/nav_rb_bg_corner_radius"
                android:topRightRadius="@dimen/nav_rb_bg_corner_radius"
                android:bottomLeftRadius="@dimen/nav_rb_bg_corner_radius"
                android:bottomRightRadius="@dimen/nav_rb_bg_corner_radius"/>
            <solid android:color="#00000000"/>
            <stroke android:width="1dp"
                android:color="#000000"/>
        </shape>
        <color android:color="#000000"/>
    </item>
    <item 
        >
        <shape >
            <corners android:topLeftRadius="@dimen/nav_rb_bg_corner_radius"
                android:topRightRadius="@dimen/nav_rb_bg_corner_radius"
                android:bottomLeftRadius="@dimen/nav_rb_bg_corner_radius"
                android:bottomRightRadius="@dimen/nav_rb_bg_corner_radius"/>
            <solid android:color="#000000"/>
            <stroke android:width="1dp"
                android:color="#000000"/>
        </shape>
        <color android:color="#000000"/>
    </item>
    
    
    

</selector>