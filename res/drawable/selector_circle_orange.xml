<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item 
        android:state_checked="true"
        >
        <layer-list >
            
            <item android:left="@dimen/color_circle_padding"
                android:right="@dimen/color_circle_padding"
                android:bottom="@dimen/color_circle_padding"
                android:top="@dimen/color_circle_padding">
        	    <shape android:shape="oval">
            		<solid android:color="@color/color_orange"/>
            
        		</shape>
        	</item>
            <item >
                <shape 
            		android:shape="ring"
       				android:innerRadius="@dimen/color_circle_innerRadius"
       				android:thickness="1dp"
       				android:useLevel="false">
            			<size android:width="@dimen/color_circle_size"
            			    android:height="@dimen/color_circle_size"/>
            			
            			<solid android:color="@color/color_dark_gray"/>
        		</shape>
        	</item>
        	
        </layer-list>
        
    </item>
    <item 
        >
        <shape 
            android:shape="oval"
            >
            <solid android:color="@color/color_orange"
                />
            <stroke android:width="1dp"
                android:color="@color/color_dark_gray"/>
            <size android:width="@dimen/color_circle_size"
                android:height="@dimen/color_circle_size"/>
            
        </shape>
    </item>

</selector>
