<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="SplashActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:background">@drawable/img_splash</item>
    </style>

    <style name="text_marquee_forever">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:width">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">45dp</item>
    </style>
    
    <style name="bottom_nav_radioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/selector_bottom_rb_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>
    
    <style 
        name="shake_setting_radioButton">
        <item name="android:background">@drawable/bg_rb</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
    <style name="Dialog_Fullscreen"
        parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->  
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->  
        <item name="android:windowIsTranslucent">false</item><!--半透明-->  
        <item name="android:windowNoTitle">true</item><!--无标题-->  
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->  
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->  
        <item name="android:backgroundDimAmount">0.6</item> 
    </style>
    
    <style name="Dialog_Fullscreen_dim"
        parent="@style/Dialog_Fullscreen">
        <item name="android:windowIsTranslucent">true</item><!--半透明-->  
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->  
        <item name="android:backgroundDimAmount">0.7</item> 
    </style>
    
    <style name="register_inform_style" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="radiobutton_light_effect">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>
</resources>
