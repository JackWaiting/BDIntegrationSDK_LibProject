<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="SplashActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:background">@drawable/img_splash</item>
    </style>

    <style name="text_marquee_forever">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:width">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">45dp</item>
    </style>
    
    <style name="bottom_nav_radioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/selector_bottom_rb_text</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style 
        name="shake_setting_radioButton">
        <item name="android:background">@drawable/bg_rb</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
</resources>
